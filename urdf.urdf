<?xml version="1.0"?>
<robot name="quadruped_leg">
  
  <!-- Leg segments -->
  <link name="hip">
    <visual>
      <geometry>
        <cylinder radius="10" length="15"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <link name="upper_leg">
    <visual>
      <geometry>
        <cylinder radius="10" length="72"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <link name="lower_leg">
    <visual>
      <geometry>
        <cylinder radius="10" length="115"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <link name="foot">
    <visual>
      <geometry>
        <cylinder radius="15" length="4"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <!-- Joints -->
  <joint name="hip_joint" type="revolute">
    <parent link="world"/>
    <child link="hip"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.5708" upper="1.5708" effort="10" velocity="1"/>
  </joint>

  <joint name="upper_leg_joint" type="revolute">
    <parent link="hip"/>
    <child link="upper_leg"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="3.1416" effort="10" velocity="1"/>
  </joint>

  <joint name="lower_leg_joint" type="revolute">
    <parent link="upper_leg"/>
    <child link="lower_leg"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="3.1416" effort="10" velocity="1"/>
  </joint>

  <joint name="foot_joint" type="revolute">
    <parent link="lower_leg"/>
    <child link="foot"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="3.1416" effort="10" velocity="1"/>
  </joint>

</robot>
